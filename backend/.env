# ===== Server =====
FLASK_ENV=development
HOST=127.0.0.1
PORT=5000
CORS_ORIGINS=http://127.0.0.1:5500,http://localhost:5500

# ===== Database (PostgreSQL) =====
# Format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartcampus

# ===== JWT =====
JWT_SECRET=change_me_in_prod
JWT_EXPIRES_MIN=1440

# ===== SMTP (Email) =====
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Smart Campus IT" <noreply@smartcampus.test>

# ===== Uploads =====
UPLOAD_DIR=uploads
MAX_CONTENT_LENGTH_MB=10
